<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.dao.FollowDao">
    <delete id="deleteByIdAndFollowId">
        delete from tb_follow where user_id=#{userId} and follow_user_id=#{followId}
    </delete>

    <select id="selectYesOrNot" resultType="com.baizhi.entity.Follow">
        select id
        from tb_follow
        where user_id = #{userId}
          and follow_user_id = #{followId}
    </select>
    <select id="queryAttention" resultType="java.lang.Integer" parameterType="int">
        select follow_user_id from tb_follow where user_id = #{userId}
    </select>
    <!--    void insert(T t);-->
    <insert id="insert" parameterType="Follow">
        insert into tb_follow(user_id, follow_user_id, create_time)
        values(#{userId},#{followUserId},#{createTime})
    </insert>
</mapper>